{% extends 'adg13AdminBundle:AdminPanel:index.html.twig' %}
{% block body %}
<div class="container">
    <div class="bs-docs-section">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-header">
                    <h2 id="add_member">Create a New Member</h2>
                </div>
            </div>           
        </div>
        <!--Left form-->
        <div class="row">
            <div class="col-lg-6">
                <div class="well">
                    <form class="bs-example form-horizontal">
                        <fieldset>
                            <legend>Personal Details</legend>
                            <div class="form-group">
                                <label for="inputName" class="col-lg-2 control-label">Names</label>
                                <div class="col-lg-10">
                                    <input type="text" class="form-control" id="inputName" placeholder="Names">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputSurname" class="col-lg-2 control-label">Surname</label>
                                <div class="col-lg-10">
                                    <input type="text" class="form-control" id="inputSurname" placeholder="Surname">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputBday" class="col-lg-2 control-label">B-Day</label>
                                <div class="col-lg-10">
                                    <input type="date" class="form-control" id="inputBday"> 
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputGender" class="col-lg-2 control-label">Gender</label>
                                <div class="col-lg-10">
                                    <button type="button" class="btn btn-primary" id="inputGender">Male</button>
                                    <button type="button" class="btn btn-primary" id="inputGender">Female</button>                                   
                                </div>
                            </div>
                            <div style="border-bottom: 1px solid #eeeeee;margin-bottom: 15px;"></div>
                            <div class="form-group">
                                <div class="col-lg-10 col-lg-offset-2">
                                    <button class="btn btn-warning">Cancel</button>
                                    <button type="submit" class="btn btn-success">Submit</button>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
            <!--Right form-->
            <div class="row">
                <div class="col-lg-6">
                    <div class="well">
                        <form class="bs-example form-horizontal">
                            <fieldset>
                                <legend>Home Address / Contact Details</legend>
                                <div class="form-group">
                                    <label for="inputLine1" class="col-lg-2 control-label">Line 1</label>
                                    <div class="col-lg-10">
                                        <input type="text" class="form-control" id="inputLine1" placeholder="Line1">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputLine2" class="col-lg-2 control-label">Line 2</label>
                                    <div class="col-lg-10">
                                        <input type="text" class="form-control" id="inputLine2" placeholder="Line 2">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputLine3" class="col-lg-2 control-label">Line 3</label>
                                    <div class="col-lg-10">
                                        <input type="text" class="form-control" id="inputLine3" placeholder="Line 3">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputTown" class="col-lg-2 control-label">Town</label>
                                    <div class="col-lg-10">
                                        <input type="text" class="form-control" id="inputTown" placeholder="Town">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputPostCode" class="col-lg-2 control-label">Zip Code</label>
                                    <div class="col-lg-10">
                                        <input type="text" class="form-control" id="inputPostCode" placeholder="Post Code">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputHomeTel" class="col-lg-2 control-label">Home Tel</label>
                                    <div class="col-lg-10">
                                        <input type="text" class="form-control" id="inputHomeTel" placeholder="Home Tel">
                                    </div>
                                </div>           
                                <div class="form-group">
                                    <label for="inputCellTel" class="col-lg-2 control-label">Cell Tel</label>
                                    <div class="col-lg-10">
                                        <input type="text" class="form-control" id="inputCellTel" placeholder="Cell Tel">
                                    </div>
                                </div>           
                                <div class="form-group">
                                    <div class="col-lg-10 col-lg-offset-2">
                                        <button class="btn btn-default">Cancel</button>
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}
