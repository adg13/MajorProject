{% extends ':Admin:index.html.twig' %}
{% block body %}
    <div class="container">
        <div class="bs-docs-section">
            <div class="row">
                <div class="col-lg-12">
                    <div class="page-header">
                        <h2 id="add_member">Notifications</h2>
                    </div>
                </div>           
            </div>
        </div>
        <div class="well">
            <div class="row">
                <div class="form-group">
                    <div class="col-lg-12">   
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>#</th>  
                                        <th>Member</th>
                                        <th>Notification</th>
                                        <th>Date</th>
                                        <th>Details</th>
                                        <th></th>  
                                    </tr>
                                </thead>

                                {% for notification in notifications %}
                                <tr>
                                    <td>{{ notification.id }}</td> 
                                    <td>{{ notification.user.personal.firstName }}{{ notification.user.personal.lastname }}</td>
                                    <td>{{ notification.type }}</td>
                                    <td>{{ notification.notDate|date('Y-d-m')  }}</td>
                                    <td>Some details</td>
                                    <td><a href="" class="btn btn-primary">Accepted</a>
                                        <a href="" class="btn btn-primary">Declined</a>
                                        <a href="" class="btn btn-primary">View</a></td>  
                                </tr>
                                {% endfor %}    
                                        
                                    </tr>          
                                </tbody>
                            </table>
                        </div> 
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
