{% extends 'adg13AdminBundle:AdminPanel:index.html.twig' %}
{% block body %}
<div class="container">
    <div class="bs-docs-section">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-header">
                    <h2 id="On_Duty">On Duty</h2>
                </div>
            </div>           
        </div>
    </div>
    <div class="well">
        <div class="row">
            <div class="form-group">
                <div class="col-lg-12">   
                     {% for user in users %}
                    <p>Member: {{ user.personal.firstName }} {{ user.personal.lastname }}</p>
                             {% if user.events|length > 0 %}                            
                                {% set events  = user.events %}
                                    {% for event in events %}
                                       <p> Start: {{ event.start }}<br/>
                                            End:   {{ event.end }}<br/>
                                            Title: {{ event.title }}<br/>
                                            allDay:{{ event.allDay }}<br/>
                                        </p>
                                    {% endfor %}
                                 {% endif %}
                            {% endfor %} 
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
