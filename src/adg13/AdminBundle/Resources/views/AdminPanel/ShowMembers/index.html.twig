{% extends ':Admin:index.html.twig' %}
{% block body %}
    <div class="container">
        <div class="bs-docs-section">
            <div class="row">
                <div class="col-lg-12">
                    <div class="page-header">
                        <h2 id="add_member">List of all Members</h2>
                    </div>
                </div>           
            </div>
        </div>
    </div>
    <div class="well">
        <div class="row">
            <div class="col-lg-12">  
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>  
                                <th>Title</th>
                                <th>First name</th>
                                <th>Last Name</th>
                                <th>Address</th>
                                <th>Telefon</th>  
                                <th>Email</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for user in users %}
                                <tr>
                                    <td>{{ user.id }}</td> 
                                    <td>{{ user.personal.title }}</td>
                                    <td>{{ user.personal.firstName }}</td>
                                    <td>{{ user.personal.lastname }}</td>
                                    <td>{{ user.address.toString() }}</td>
                                    <td>{{ user.address.tel }}</td>
                                    <td>{{ user.email }}</td>   
                                    <td><a href="{{path('adg13_admin_show_detailed_members', { 'id': user.id })}}" class="btn btn-primary">Details</a>
                                        <a href="{{path('adg13_admin_edit_detailed_members', { 'id': user.id })}}" class="btn btn-primary">Edit</a></td>  
                                </tr>
                            {% endfor %}           
                        </tbody>
                    </table>
                </div>   
                <a href="{{path('adg13_admin_print_members')}}" class="btn btn-primary">Print preview</a>
            </div>
        </div>
    {% endblock %}
